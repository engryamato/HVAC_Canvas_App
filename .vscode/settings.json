{
    "claudeCode.useTerminal": true,
    "chat.mcp.assisted.nuget.enabled": true,
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay",
    // Code Actions on Save
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    // ESLint Configuration
    "eslint.enable": true,
    "eslint.workingDirectories": [
        {
            "directory": "./hvac-design-app",
            "changeProcessCWD": true
        }
    ],
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    // SonarLint Configuration - Bind to SonarCloud project
    "sonarlint.connectedMode.project": {
        "connectionId": "engryamato",
        "projectKey": "engryamato_HVAC_Canvas_App"
    },
    // Docker Configuration
    "docker.dockerComposeBuild": true,
    "docker.dockerComposeDetached": true,
    // TypeScript Configuration
    "typescript.tsdk": "hvac-design-app/node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true
}