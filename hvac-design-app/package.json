{
  "name": "sizewise-hvac-canvas",
  "version": "0.1.0",
  "private": true,
  "description": "Professional HVAC design and estimation desktop application",
  "author": "John Rey Razonable",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev --webpack",
    "build": "node scripts/validate-env.js && next build",
    "build:prod": "NODE_ENV=production node scripts/validate-env.js && next build",
    "start": "next start",
    "tauri:dev": "tauri dev",
    "tauri:build": "NODE_ENV=production node scripts/validate-env.js && tauri build",
    "validate-env": "node scripts/validate-env.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=verbose --reporter=json --outputFile=test-results.json",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --coverage.thresholds.statements=70 --coverage.thresholds.branches=70 --coverage.thresholds.functions=70 --coverage.thresholds.lines=70",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "prepare": "cd .. && husky install hvac-design-app/.husky || true",
    "e2e": "playwright test --project=chromium",
    "e2e:ui": "playwright test --project=chromium --ui",
    "chromatic": "chromatic --playwright",
    "chromatic:baseline": "chromatic --playwright --auto-accept-changes",
    "parity:check": "node ../scripts/check-tauri-web-parity.js",
    "sync:tauri": "node ../scripts/sync-tauri-web.js",
    "verify:all": "npm run parity:check && npm run type-check && npm run test && npm run lint"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "idb": "^8.0.3",
    "immer": "^11.1.4",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.1.6",
    "next": "^16.1.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "tailwind-merge": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "vibe-kanban-web-companion": "^0.0.5",
    "zod": "4.3.6",
    "zustand": "5.0.11"
  },
  "devDependencies": {
    "@chromatic-com/playwright": "^0.12.8",
    "@playwright/test": "^1.58.1",
    "@tauri-apps/cli": "^2.0.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@trunkio/trunk-playwright-reporter": "^1.0.0-beta.9",
    "@types/node": "25.2.0",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "1.6.1",
    "autoprefixer": "^10.4.24",
    "chromatic": "^11.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "husky": "^9.1.7",
    "jsdom": "27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
