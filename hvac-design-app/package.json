{
  "name": "sizewise-hvac-canvas",
  "version": "0.1.0",
  "private": true,
  "description": "Professional HVAC design and estimation desktop application",
  "author": "John Rey Razonable",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "node scripts/validate-env.js && next build",
    "build:prod": "NODE_ENV=production node scripts/validate-env.js && next build",
    "start": "next start",
    "tauri:dev": "tauri dev",
    "tauri:build": "NODE_ENV=production node scripts/validate-env.js && tauri build",
    "validate-env": "node scripts/validate-env.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --reporter=verbose --reporter=json --outputFile=test-results.json",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:check": "vitest run --coverage --coverage.thresholds.statements=70 --coverage.thresholds.branches=70 --coverage.thresholds.functions=70 --coverage.thresholds.lines=70",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css}\"",
    "prepare": "cd .. && husky install hvac-design-app/.husky || true",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.14.1",
    "@mui/material": "5.15.0",
    "@tauri-apps/api": "1.5.3",
    "immer": "^11.0.1",
    "nanoid": "^5.1.6",
    "next": "^15.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "3.22.4",
    "zustand": "4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@tauri-apps/cli": "1.5.9",
    "@types/node": "22.0.0",
    "@types/react": "18.2.46",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "1.6.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "^15.0.0",
    "husky": "^9.1.7",
    "jsdom": "23.0.1",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "5.3.3",
    "vitest": "^1.6.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
