# App Configuration
NEXT_PUBLIC_APP_NAME=SizeWise HVAC Canvas
NEXT_PUBLIC_APP_VERSION=0.1.0

# =============================================================================
# Analytics Configuration
# =============================================================================

# Required: Analytics endpoint URL for sending telemetry events
# Leave empty to disable analytics
NEXT_PUBLIC_TELEMETRY_ENDPOINT=

# Optional: Enable/disable analytics globally (default: true if endpoint is set)
# Set to 'false' to completely disable analytics even with endpoint configured
# Note: Also honors NEXT_PUBLIC_ENABLE_ANALYTICS for backward compatibility
NEXT_PUBLIC_ANALYTICS_ENABLED=true

# Optional: Enable analytics debug mode (default: false in production)
# When true, logs all analytics events to console for debugging
NEXT_PUBLIC_ANALYTICS_DEBUG=false

# =============================================================================
# Feature Flags
# =============================================================================

NEXT_PUBLIC_ENABLE_WEATHER_API=false
NEXT_PUBLIC_ENABLE_CLOUD_SYNC=false

# Development
NEXT_PUBLIC_DEBUG_MODE=true
NODE_ENV=development
